<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    
    <EditText android:inputType="textPersonName|textNoSuggestions"
        android:id="@+id/newTextFileTitleEditText"
        android:layout_width="match_parent"
    		android:layout_height="48dip"
    		android:hint="@string/entertitle"
    		android:layout_marginTop="12dip"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="12dip"
        android:background="#0099cc"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="12dip"/>
    
    <EditText android:inputType="textMultiLine|textAutoCorrect"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="12dip"
        android:id="@+id/newTextFileBodyEditText"
        android:layout_width="match_parent"
    		android:layout_height="0dip"
    		android:layout_weight="1"
    		android:isScrollContainer="true"
    		android:hint="@string/entertext"
    		android:imeOptions="flagNoAccessoryAction"/>
    
</LinearLayout>